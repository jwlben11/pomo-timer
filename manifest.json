{
  "manifest_version": 3,
  "name": "StudyFlow - Smart Pomodoro Timer",
  "version": "1.0.0",
  "description": "An intelligent study time management tool with Pomodoro timer, analytics, and smart notifications",
  "permissions": [
    "storage",
    "notifications",
    "alarms",
    "background"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
